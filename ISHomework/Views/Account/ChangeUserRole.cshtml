@{
}

@model ISDomain.Identity.CinemaApplicationUser
@{
    ViewData["Title"] = "ChangeUserRole";
}

<h4>Change User Role</h4>
<br />
<form asp-action="ChangeUserRole" method="post">
    @Html.HiddenFor(m => m.Id)
    <select asp-for="Role" asp-items="Html.GetEnumSelectList<ISDomain.Identity.Role>()">
        <option value="">Select Desired Role</option>
    </select>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form> 
